<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Paint_AvaloniaUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:control="using:Paint_AvaloniaUI.Views.CotrolViews"
        xmlns:viewModel="using:Paint_AvaloniaUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Paint_AvaloniaUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Paint_AvaloniaUI"
        x:DataType="viewModel:MainWindowViewModel">

  <Grid RowDefinitions="Auto, *, Auto">
    <Grid Grid.Row="0">
      <Panel Background="Gray"
             Height="50"
             />
    </Grid>
    <Grid Grid.Row="1"
          ColumnDefinitions="Auto, *, Auto">
      <Panel Background="Gray"
             Grid.Column="0" 
             Width="10"/>
      <ContentControl 
        Grid.Column="1" 
        Content="{Binding PaintCanvasVM}" />
      <Panel Background="Gray"
             Grid.Column="2"
             Width="10"/>
    </Grid>
    <Grid Grid.Row="2">
      <Panel Background="Gray" 
             Height="50"/>
    </Grid>
  </Grid>
</Window>
